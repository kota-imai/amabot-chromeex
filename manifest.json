{
    "manifest_version" : 2,
    "name": "あまぼっとchrome拡張",
    "description" : "FBA料金シミュレーターでの計算をお手軽にしました",
    "version" : "1.0.0",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.amazon.co.jp/*", "https://amazon.jp/*"],
            "js": ["js/content.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}